<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="rhapsody.social.validator.constraint_validator.class">Rhapsody\SocialBundle\Validator\ConstraintValidator</parameter>
    </parameters>

    <services>
        <service id="rhapsody.social.validator.activity.constraint_validator" class="%rhapsody.social.validator.constraint_validator.class%">
            <argument type="collection" />
        </service>

        <service id="rhapsody.social.validator.category.constraint_validator" class="%rhapsody.social.validator.constraint_validator.class%">
            <argument type="collection" />
        </service>

        <service id="rhapsody.social.validator.post.constraint_validator" class="%rhapsody.social.validator.constraint_validator.class%">
            <argument type="collection" />
        </service>

        <service id="rhapsody.social.validator.topic.constraint_validator" class="%rhapsody.social.validator.constraint_validator.class%">
            <argument type="collection" />
        </service>
    </services>

</container>